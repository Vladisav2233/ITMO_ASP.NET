@model StudentViewModel

@{
    ViewData["Title"] = "Добавление/Редактирование";
}

<h1>Добавление/Редактирование</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <div class="input-group mb-3 date">
                    <div class="input-group-text">
                        <i class="fa-solid fa-calendar-days"></i>
                    </div>
                    <input asp-for="Birthday" id="inputBirthday" type="text" class="form-control">
                </div>
                <span asp-validation-for="Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade1" class="control-label"></label>
                <input asp-for="Grade1" class="form-control" />
                <span asp-validation-for="Grade1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade2" class="control-label"></label>
                <input asp-for="Grade2" class="form-control" />
                <span asp-validation-for="Grade2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade3" class="control-label"></label>
                <input asp-for="Grade3" class="form-control" />
                <span asp-validation-for="Grade3" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                <input type="submit" value="Назад" asp-action="Index" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>
<br />